#!/bin/bash

echo -e "       \033[1;31m!!##### \033[1;36mคำเตือน \033[1;31m#####!!\033[0m"
echo ""
echo -e "\033[1;33m+รหัสผ่าน root ใช้สำหรับเข้าใช้งานเพื่อ ติดตั้ง ปรับแต่ง เซิฟเวอร์+\033[0m"
echo ""
echo -e "  \033[1;36mใส่รหัสผ่านใหม่ที่ต้องการ...\033[1;31m\033[0m" read  -p   : pass
(echo $pass; echo $pass)|passwd 2>/dev/null
sleep 1s
echo -e "    \033[1;32mเปลี่ยนรหัสผ่าน root เสร็จเรียบร้อย!\033[0m"
sleep 5s
cd
clear

